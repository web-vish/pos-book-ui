{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["@testing-library/jest-dom", "jest", "@types/jest", "@types/vitest"],
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "vite.config.ts",
    "vite.config.js",
    "vitest.config.ts",
    "vitest.config.js",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
